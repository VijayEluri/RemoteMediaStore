<!-- 
  UIBinder script for the main UI of the RemoteMediaStore application.
-->
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:rms='urn:import:de.oliver_heger.mediastore.client'>

<g:HTMLPanel>

  <g:HTMLPanel ui:field="pnlLogin">
    <div align="center">
    <h1>Remote Media Store</h1>
    In order to use this application, you have to
    <g:Anchor ui:field="linkLogin">sign in</g:Anchor>
    first.
    </div>
  </g:HTMLPanel>

  <g:HTMLPanel ui:field="pnlApp">
    <table cellpadding="0" cellspacing="0" style="width: 100%;height: 100%;">

      <!-- header row -->
      <tr style="height: 25%;">
        <td>
        <div align="center">
        <h1>Remote Media Store</h1>
        </div>
        <div align="right">
        Welcome, <span ui:field="spanUserName"/>.
        <g:Anchor ui:field="linkLogout">(Sign out)</g:Anchor>
        <g:Button ui:field="btnTestData">Create test data</g:Button>
        </div>
        </td>
      </tr>

      <!-- The main content -->
      <tr style="height: 75%;">
        <td>
        <g:TabLayoutPanel ui:field="tabPanel" barHeight="20">
          <g:tab>
            <g:header>Artists</g:header>
            <rms:OverviewTable ui:field="tabArtists"/>
          </g:tab>
          <g:tab>
            <g:header>Songs</g:header>
            <rms:OverviewTable ui:field="tabSongs"/>
          </g:tab>
        </g:TabLayoutPanel>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>

</g:HTMLPanel>
</ui:UiBinder>