<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .header {
    	font-weight: bold;
    	text-decoration: underline;
        color: black;
    }
  </ui:style>
  <ui:with field='images'
    type='de.oliver_heger.mediastore.client.ImageResources'/>

  <g:HorizontalPanel>
    <g:Image ui:field="imgSortUp" visible="false" resource='{images.sortUp}'/>
    <g:Image ui:field="imgSortDown" visible="false" resource='{images.sortDown}'/>
    <g:Anchor ui:field="lnkHeader" styleName="{style.header}"/>
  </g:HorizontalPanel>
</ui:UiBinder> 